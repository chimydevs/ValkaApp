<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contadores.ContadoresActivity"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contenedor del primer héroe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del primer héroe -->
            <TextView
                android:id="@+id/heroTitleTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heroe1"
                style="@style/heroe1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <!-- Contenido de los contadores del primer héroe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Vida del primer héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vidaTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida: 100"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/vidaDecrementButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:backgroundTint="@color/colorButton" />

                        <Button
                            android:id="@+id/vidaIncrementButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:backgroundTint="@color/colorButton" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Ataque y Defensa del primer héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Ataque del primer héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ataqueTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ataque: 10"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/ataqueDecrementButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:backgroundTint="@color/colorButton" />

                            <Button
                                android:id="@+id/ataqueIncrementHeroe1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:backgroundTint="@color/colorButton" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Defensa del primer héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/defensaTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defensa: 5"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/defensaDecrementButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:backgroundTint="@color/colorButton" />

                            <Button
                                android:id="@+id/defensaIncrementButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:backgroundTint="@color/colorButton" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Contenedor del segundo héroe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del segundo héroe -->
            <TextView
                android:id="@+id/heroTitleTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heroe2"
                style="@style/hereo2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <!-- Contenido de los contadores del segundo héroe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Vida del segundo héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vidaHeroe2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida: 100"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/vidaMinun2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:backgroundTint="@color/colorButton" />

                        <Button
                            android:id="@+id/vidaPlus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:backgroundTint="@color/colorButton" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Ataque y Defensa del segundo héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Ataque del segundo héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ataqueTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ataque: 10"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/ataqueDecrementButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:backgroundTint="@color/colorButton" />

                            <Button
                                android:id="@+id/ataqueIncrementButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:backgroundTint="@color/colorButton" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Defensa del segundo héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/defensaHeroe2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defensa: 5"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/defensaDecrementButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:backgroundTint="@color/colorButton" />

                            <Button
                                android:id="@+id/defensaIncrementButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:backgroundTint="@color/colorButton" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--  -->
        </LinearLayout>

        <!-- Contenedor del tercer héroe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del tercer héroe -->
            <TextView
                android:id="@+id/heroTitleTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heroe3"
                style="@style/heroe3"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <!-- Contenido de los contadores del tercer héroe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Vida del tercer héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vidaTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida: 100"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/vidaDecrementButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorButton"
                            android:text="-" />

                        <Button
                            android:id="@+id/vidaIncrementButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorButton"
                            android:text="+" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Ataque y Defensa del tercer héroe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Ataque del tercer héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ataqueTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ataque: 10"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/ataqueDecrementButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorButton"
                                android:text="-" />

                            <Button
                                android:id="@+id/ataqueIncrementButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorButton"
                                android:text="+" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Defensa del tercer héroe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/defensaTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defensa: 5"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/defensaDecrementButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorButton"
                                android:text="-" />

                            <Button
                                android:id="@+id/defensaIncrementButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorButton"
                                android:text="+" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- -->
        </LinearLayout>
        <!-- Contenedor del contador de Fortaleza -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título de la Fortaleza -->
            <TextView
                android:id="@+id/fortalezaTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fortaleza"
                style="@style/fortaleza"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <!-- Contador de Vida de la Fortaleza -->
            <TextView
                android:id="@+id/fortalezaVidaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vida: 50"
                style="@style/fortaleza"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <!-- Botones de incremento y decremento de la Fortaleza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/fortalezaDecrementButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:backgroundTint="@color/colorButton" />

                <Button
                    android:id="@+id/fortalezaIncrementButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorButton" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
